# =====================================================
# Sankofa Enterprise Pro - Environment Configuration
# =====================================================

# Environment
ENVIRONMENT=development  # development | staging | production
DEBUG=false

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sankofa_fraud_db
DB_USER=sankofa
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=30

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=50
REDIS_TTL_DEFAULT=3600

# Security (CRITICAL - Change these in production!)
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
ENCRYPTION_KEY=your_encryption_key_here_change_in_production
RATE_LIMIT_PER_MINUTE=1000
MAX_LOGIN_ATTEMPTS=5

# Flask Debug Mode (NEVER enable in production!)
FLASK_DEBUG=false

# SSL Certificate Verification (set to false ONLY in dev with self-signed certs)
VERIFY_SSL_CERTS=true

# Machine Learning
ML_MODEL_PATH=./models
ML_CONFIDENCE_THRESHOLD=0.5
ML_BATCH_SIZE=100
ML_MAX_LATENCY_MS=50.0
ML_ENABLE_CONTINUOUS_LEARNING=true
ML_DRIFT_DETECTION_WINDOW=10000

# Monitoring
DATADOG_API_KEY=
DATADOG_APP_KEY=
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
ENABLE_METRICS=true

# Compliance
BACEN_API_URL=
BACEN_INSTITUTION_CODE=
ENABLE_LGPD=true
ENABLE_PCI_DSS=true
AUDIT_RETENTION_DAYS=2555  # 7 years for BACEN compliance

# API Configuration
API_HOST=0.0.0.0
API_PORT=8445
API_WORKERS=4
API_TIMEOUT=30

# Frontend
FRONTEND_PORT=5000
FRONTEND_HOST=0.0.0.0
