# CONFIGURAÇÃO DE PRODUÇÃO - SANKOFA ENTERPRISE PRO
# ⚠️  NUNCA COMMITAR ESTE ARQUIVO COM VALORES REAIS

# Ambiente
NODE_ENV=production
FLASK_ENV=production

# Configurações da API
API_HOST=0.0.0.0
API_PORT=8445
API_VERSION=v1

# Configurações do Banco de Dados
DATABASE_URL=postgresql://username:password@host:port/database
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=sankofa_enterprise_prod
DB_USER=your-db-user
DB_PASSWORD=your-secure-db-password

# Configurações de Segurança (OBRIGATÓRIO CONFIGURAR)
SECRET_KEY=your-super-secure-secret-key-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars
JWT_ACCESS_TOKEN_EXPIRES=3600

# Configurações de ML
ML_MODEL_PATH=/app/models/
ENABLE_ML_FEATURES=true

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/sankofa/app.log

# Configurações de Cache
REDIS_URL=redis://your-redis-host:6379/0
CACHE_TYPE=redis

# Configurações de Email
MAIL_SERVER=your-smtp-server
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-app-password

# URLs de Produção
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com

# Configurações de Monitoramento
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-key

# Configurações AWS (se aplicável)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket